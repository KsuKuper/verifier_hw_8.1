			"name": "get tasks list",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "a333423d-5268-4116-8a27-54dcc1e11958",
						"exec": [
							"let currentAmountOfTasks = pm.response.json().length;",
							"console.log(pm.response.json().length);",
							"",
							"pm.collectionVariables.set('currentAmountOfTasks', currentAmountOfTasks);",
							"",
							"",
							"",
							"if(currentAmountOfTasks < pm.collectionVariables.get('targetNumberOfTasks')) {",
							"    postman.setNextRequest('create a task');",
							"} else if (currentAmountOfTasks >= pm.collectionVariables.get('targetNumberOfTasks')) {",
							"    pm.collectionVariables.set(\"ids\", pm.response.json().map(task => task.id));",
							"    pm.collectionVariables.set('lastID', pm.collectionVariables.get(\"ids\")[pm.collectionVariables.get(\"ids\").length - 1]);",
							"    postman.setNextRequest('change task text');",
							"};"
						],
						"type": "text/javascript"
					}
